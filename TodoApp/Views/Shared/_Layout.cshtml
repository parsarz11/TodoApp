<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TodoApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Css",required: false)
</head>
<body style="background-color: #EDF2F4;">
    <div class="w-100 h-100 ">






        <main role="main" class="main" style="left: -4%">
            <div class="container-fluid">
                <div class="row" style="flex-wrap: nowrap;">
                    <div class="col-sm-auto sticky-top   shadow-lg" style="background-color:#2B2D42;">
                        <div class="d-flex flex-sm-column flex-row flex-nowrap align-items-center sticky-top" style="background-color:#2B2D42;font-size: 20px;">
                            <ul class="nav nav-pills nav-flush flex-sm-column flex-row flex-nowrap mb-auto mx-auto text-center align-items-center">
                                <li>
                                    <a asp-controller="Task" asp-action="DashBoard" class="nav-link py-3 px-2" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="DashBoard" data-toggle="tooltip">
                                        <i class="bi bi-graph-down"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Task" asp-action="Tasks" class="nav-link py-3 px-2" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="category" data-toggle="tooltip" data-placement="right" title="Hooray!">
                                        <i class="bi bi-list-check"></i>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="task" asp-action="AddTask" class="nav-link py-3 px-2" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="income" data-toggle="tooltip">
                                        <i class="bi bi-clipboard2-plus"></i>
                                    </a>
                                </li>
