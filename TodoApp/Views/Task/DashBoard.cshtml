
@{
    ViewData["Title"] = "DashBoard";
}

<div class="containerCards">

    <div class="item">
        <h2>done taks</h2>
        <div class="DoneTask">

        </div>
    </div>

    <div class="item">
        <h2>all Task</h2>
        <div class="AllTask">

        </div>
    </div>

    <div class="item" id="progressItem">
        <h2>Task progress</h2>
        <div id="ProgDiv">
            
        </div>
        
    </div>
</div>


<div id="ChartContainer">


    <div class="pieChart">
        <div id="chart-container"></div>

    </div>


    <div class="pieChart">
        <div id="chart-container2"></div>

    </div>

</div>
@section Css{
    <style>

        progress {
            background-color: aqua;
        }

        .containerCards {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            grid-gap: 10px;
            padding: 10px;
        }

        .item {
            border-radius: 4px;
            background: #8D99AE;
            box-shadow: 0px 4px 4px -1px rgba(0, 0, 0, 0.25);
            text-align: left;
            padding-left: 20px;
            padding-bottom: 20px;
            font-size: 30px;
        }

        #progressItem {
            padding-right: 20px;
        }

        #chart-container {
            position: relative;
            height: 100%;
            overflow: hidden;
        }

        #chart-container2 {
            position: relative;
            height: 100%;
            overflow: hidden;
        }


        .pieChart {
            margin-right: 10px;
            width: 700px;
            height: 330px;
            background-color: #d8e2dc;
            border-radius: 4px;
        }


        #ChartContainer {
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 10px;
            padding: 10px;
        }
    </style>
}
